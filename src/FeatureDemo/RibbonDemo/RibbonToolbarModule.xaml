<Common:DemoModuleView
    x:Class="RibbonDemo.RibbonToolbarModule"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Common="using:FeatureDemo.Common"
    xmlns:Core="using:DevExpress.WinUI.Core"
    xmlns:Interactivity="using:DevExpress.WinUI.Mvvm.UI.Interactivity"
    xmlns:Ribbon="using:DevExpress.WinUI.Ribbon"
    xmlns:Xaml="using:DevExpress.WinUI.Controls.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dxmvvm="using:DevExpress.WinUI.Mvvm.UI"
    xmlns:local="using:RibbonDemo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Common:DemoModuleView.DataContext>
        <local:RibbonViewModel />
    </Common:DemoModuleView.DataContext>

    <Common:DemoModuleView.Resources>
        <dxmvvm:ObjectToObjectConverter x:Key="RibbonViewModeToVisibilityConverter">
            <dxmvvm:MapItem Source="Normal" Target="Visible" />
            <dxmvvm:MapItem Source="AutoHide" Target="Collapsed" />
        </dxmvvm:ObjectToObjectConverter>
        <dxmvvm:ObjectToObjectConverter x:Key="RibbonViewModeToVisibilityInvertConverter">
            <dxmvvm:MapItem Source="Normal" Target="Collapsed" />
            <dxmvvm:MapItem Source="AutoHide" Target="Visible" />
        </dxmvvm:ObjectToObjectConverter>
        <Core:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <local:AlignmentEnumToBooleanConverter x:Key="AlignmentToBooleanConverter" />
        <Common:IntToDoubleConverter x:Name="IntToDoubleConverter" />
        <Common:BooleanToNullableBooleanConverter x:Name="BoolToNullableConverter" />
        <Common:IdentityConverter x:Name="IdentityConverter" />
        <Common:ObjectToFloatConverter x:Name="ObjectToFloatConverter" />
    </Common:DemoModuleView.Resources>

    <Grid>
        <Ribbon:RibbonToolbarControl
            x:Name="ribbon"
            Grid.Row="0"
            Width="Auto"
            Margin="0"
            HorizontalAlignment="Stretch">
            <Ribbon:RibbonToolbarControl.HelpPane>
                <Ribbon:RibbonToolbarHelpPane>
                    <Ribbon:RibbonToolbarHelpPaneButton
                        Command="{x:Bind ViewModel.UndoCommand}"
                        Content="Undo"
                        IconHeight="24"
                        IconSource="&#xE7A7;"
                        IconStretch="Uniform"
                        IconWidth="24"
                        ToolTipService.ToolTip="Undo" />
                    <Ribbon:RibbonToolbarHelpPaneButton
                        Command="{x:Bind ViewModel.RedoCommand}"
                        Content="Redo"
                        IconHeight="24"
                        IconSource="&#xE7A6;"
                        IconStretch="Uniform"
                        IconWidth="24"
                        ToolTipService.ToolTip="Redo" />
                </Ribbon:RibbonToolbarHelpPane>
            </Ribbon:RibbonToolbarControl.HelpPane>
            <Ribbon:RibbonToolbarTab Caption="Main">
                <Ribbon:RibbonToolbarGroup
                    Width="Auto"
                    Caption="Font"
                    IconFill="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                    IconHeight="24"
                    IconSource="F0 M20,18z M0,0z M4,14L9.457,0 10.543,0 12.897,6C12.568,6.035,12,6.31,12,6.31L10,1.2676 7,9 9.217,9C9.17422,9.05736,9.13449,9.11273,9.09495,9.16783L9.09493,9.16785 9.09492,9.16787C9.01245,9.28279 8.93078,9.39659 8.824,9.525 8.70628,9.66682 8.5688,9.81637 8.43226,9.9649L8.4,10 6.5524,10 5,14 4,14z M13.781,6.805L13.781,6.799C16.575,7.017 18.686,10.999 14.654,13.164 12.874,13.82 9.60798,14.464 5.83398,13.164 8.4952,11.5139 9.66326,9.8667 10.4516,8.75492 10.7034,8.3999 10.9164,8.09948 11.127,7.871 11.789,7.209 12.509,6.875 13.215,6.805L13.217,6.8049C13.4073,6.79493,13.5956,6.78507,13.781,6.805z M13.727,7.672C13.714,7.67163 13.701,7.67096 13.688,7.67 13.601,7.661 13.464,7.664 13.297,7.672 12.806,7.721 12.286,7.946 11.746,8.484 11.6119,8.6327 11.4469,8.86495 11.2381,9.15881 10.9598,9.55068 10.6036,10.0521 10.139,10.611 9.59398,11.266 8.79698,12.001 7.85158,12.75 10.599,13.283 12.919,12.857 14.279,12.365 15.989,11.427 16.206,10.408 15.941,9.492 15.676,8.57 14.726,7.757 13.727,7.672z M13.5019,8.67489L13.5019,8.67489C13.5509,8.67356 13.5866,8.6726 13.58,8.672 13.601,8.67369 13.622,8.67502 13.643,8.676 14.188,8.724 14.824,9.272 14.967,9.768 15.105,10.245 15.151,10.687 13.861,11.418 13.03,11.712 11.765,11.91 10.273,11.918 10.3579,11.8269 10.454,11.7328 10.5496,11.6392L10.5496,11.6392 10.5496,11.6392C10.6849,11.5068 10.8192,11.3752 10.92,11.254 11.4847,10.5749 11.9012,9.98564 12.172,9.60253L12.172,9.60251 12.172,9.60248 12.172,9.60247C12.3131,9.40288 12.4146,9.25925 12.477,9.188 12.866,8.806 13.154,8.702 13.395,8.678 13.4309,8.6768 13.4693,8.67577 13.5019,8.67489z M20,2L15.221,6.121C16.171,6.523,16.946,7.251,17.42,8.154L20,6 20,2z M0,18L0,15 20,15 20,18 0,18z"
                    IconWidth="24">

                    <Ribbon:RibbonToolbarComboBox
                        Width="160"
                        ItemsSource="{x:Bind ViewModel.Fonts}"
                        SelectedItem="{x:Bind rtfEditor.CurrentSelectionFontFamily, Mode=TwoWay}">
                        <Ribbon:RibbonToolbarComboBox.ItemTemplate>
                            <DataTemplate x:DataType="x:String">
                                <TextBlock FontFamily="{x:Bind}" Text="{x:Bind}" />
                            </DataTemplate>
                        </Ribbon:RibbonToolbarComboBox.ItemTemplate>
                    </Ribbon:RibbonToolbarComboBox>

                    <Ribbon:RibbonToolbarToggleButton
                        CollapsePriority="Low"
                        IconFill="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                        IconHeight="24"
                        IconSource="{ThemeResource BoldSvg}"
                        IconStretch="Fill"
                        IconWidth="24"
                        IsChecked="{x:Bind rtfEditor.CurrentSelectionBoldDecoration, Mode=TwoWay, Converter={StaticResource BoolToNullableConverter}}"
                        IsThreeStateMode="False"
                        ItemStyle="Glyph"
                        ToolTipService.ToolTip="Bold" />

                    <Ribbon:RibbonToolbarToggleButton
                        CollapsePriority="Low"
                        FlyoutSameRow="True"
                        IconFill="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                        IconHeight="24"
                        IconSource="{ThemeResource ItalicSvg}"
                        IconWidth="24"
                        IsChecked="{x:Bind rtfEditor.CurrentSelectionItalicDecoration, Mode=TwoWay, Converter={StaticResource BoolToNullableConverter}}"
                        IsThreeStateMode="False"
                        ItemStyle="Glyph"
                        ToolTipService.ToolTip="Italic" />
                    <Ribbon:RibbonToolbarToggleButton
                        CollapsePriority="Low"
                        FlyoutFlowBreak="True"
                        IconFill="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                        IconHeight="24"
                        IconSource="{ThemeResource UnderlineSvg}"
                        IconWidth="24"
                        IsChecked="{x:Bind rtfEditor.CurrentSelectionUnderlineDecoration, Mode=TwoWay, Converter={StaticResource BoolToNullableConverter}}"
                        IsThreeStateMode="False"
                        ItemStyle="Glyph"
                        ToolTipService.ToolTip="Underline" />
                    <Ribbon:RibbonToolbarButton
                        Command="{x:Bind ViewModel.FontViewModel.DecreaseFontSizeCommand}"
                        IconFill="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                        IconHeight="24"
                        IconSource="{ThemeResource DecreaseFontSizeSvg}"
                        IconWidth="24"
                        ItemStyle="Glyph"
                        ToolTipService.ToolTip="Font size down" />
                    <Ribbon:RibbonToolbarButton
                        Command="{x:Bind ViewModel.FontViewModel.IncreaseFontSizeCommand}"
                        FlyoutSameRow="True"
                        IconFill="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                        IconHeight="24"
                        IconSource="{ThemeResource IncreaseFontSizeSvg}"
                        IconWidth="24"
                        ItemStyle="Glyph"
                        ToolTipService.ToolTip="Font size up" />
                    <Ribbon:RibbonToolbarToggleButton
                        FlyoutSameRow="True"
                        IconFill="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                        IconHeight="24"
                        IconSource="{ThemeResource SubscriptSvg}"
                        IconWidth="24"
                        IsChecked="{x:Bind rtfEditor.CurrentSelectionSubscript, Mode=TwoWay, Converter={StaticResource BoolToNullableConverter}}"
                        ItemStyle="Glyph"
                        ToolTipService.ToolTip="Subscript" />
                    <Ribbon:RibbonToolbarToggleButton
                        FlyoutFlowBreakWithSeparator="True"
                        IconFill="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                        IconHeight="24"
                        IconSource="{ThemeResource SuperscriptSvg}"
                        IconWidth="24"
                        IsChecked="{x:Bind rtfEditor.CurrentSelectionSuperscript, Mode=TwoWay, Converter={StaticResource BoolToNullableConverter}}"
                        ItemStyle="Glyph"
                        ToolTipService.ToolTip="Superscript" />
                </Ribbon:RibbonToolbarGroup>
                <Ribbon:RibbonToolbarGroup
                    Width="Auto"
                    Caption="Paragraph Format"
                    IconFill="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                    IconHeight="24"
                    IconSource="{ThemeResource AlignJustifySvg}"
                    IconWidth="24">
                    <Ribbon:RibbonToolbarRadioButton
                        FontSize="20"
                        Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                        GroupName="Alignment"
                        IconHeight="24"
                        IconSource="{ThemeResource AlignLeftSvg}"
                        IconWidth="24"
                        IsChecked="{Binding CurrentSelectionAlignment, ElementName=rtfEditor, Converter={StaticResource AlignmentToBooleanConverter}, ConverterParameter=Left, Mode=TwoWay}"
                        ItemStyle="Glyph"
                        ToolTipService.ToolTip="Align Left" />
                    <Ribbon:RibbonToolbarRadioButton
                        FontSize="20"
                        Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                        GroupName="Alignment"
                        IconHeight="24"
                        IconSource="{ThemeResource AlignCenterSvg}"
                        IconWidth="24"
                        IsChecked="{Binding CurrentSelectionAlignment, ElementName=rtfEditor, Converter={StaticResource AlignmentToBooleanConverter}, ConverterParameter=Center, Mode=TwoWay}"
                        ItemStyle="Glyph"
                        ToolTipService.ToolTip="Center" />
                    <Ribbon:RibbonToolbarRadioButton
                        FontSize="20"
                        Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                        GroupName="Alignment"
                        IconHeight="24"
                        IconSource="{ThemeResource AlignRightSvg}"
                        IconWidth="24"
                        IsChecked="{Binding CurrentSelectionAlignment, ElementName=rtfEditor, Converter={StaticResource AlignmentToBooleanConverter}, ConverterParameter=Right, Mode=TwoWay}"
                        ItemStyle="Glyph"
                        ToolTipService.ToolTip="Align Right" />
                    <Ribbon:RibbonToolbarRadioButton
                        FlyoutFlowBreakWithSeparator="True"
                        GroupName="Alignment"
                        IconFill="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                        IconHeight="24"
                        IconSource="{ThemeResource AlignJustifySvg}"
                        IconWidth="24"
                        IsChecked="{Binding CurrentSelectionAlignment, ElementName=rtfEditor, Converter={StaticResource AlignmentToBooleanConverter}, ConverterParameter=Justify, Mode=TwoWay}"
                        ItemStyle="Glyph"
                        ToolTipService.ToolTip="Justify" />
                    <Ribbon:RibbonToolbarButton
                        Command="{x:Bind ViewModel.ParagraphViewModel.IncreaseParagraphIndentCommand}"
                        IconFill="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                        IconHeight="24"
                        IconSource="{ThemeResource IncreaseIndentSvg}"
                        IconWidth="24"
                        ItemStyle="Glyph"
                        ToolTipService.ToolTip="Increase Indent" />
                    <Ribbon:RibbonToolbarButton
                        Command="{x:Bind ViewModel.ParagraphViewModel.DecreaseParagraphIndentCommand}"
                        IconFill="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                        IconHeight="24"
                        IconSource="{ThemeResource DecreaseIndentSvg}"
                        IconWidth="24"
                        ItemStyle="Glyph"
                        ToolTipService.ToolTip="Decrease Indent" />
                    <Ribbon:RibbonToolbarMenuButton
                        Content="List style"
                        Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"
                        IconFill="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                        IconHeight="24"
                        IconSource="{ThemeResource BulletedListSvg}"
                        IconWidth="24"
                        ItemStyle="Glyph">
                        <Ribbon:RibbonToolbarButton
                            Grid.Row="0"
                            Command="{x:Bind ViewModel.ParagraphViewModel.SetListStyleCommand}"
                            CommandParameter="none"
                            Content="None"
                            IconFill="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                            IconHeight="16"
                            IconSource="{ThemeResource NoneSvg}"
                            IconWidth="16" />
                        <Ribbon:RibbonToolbarButton
                            Grid.Row="0"
                            Command="{x:Bind ViewModel.ParagraphViewModel.SetListStyleCommand}"
                            CommandParameter="bullet"
                            Content="Bullets"
                            IconFill="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                            IconHeight="16"
                            IconSource="{ThemeResource BulletsSvg}"
                            IconWidth="16" />
                        <Ribbon:RibbonToolbarButton
                            Grid.Row="1"
                            Command="{x:Bind ViewModel.ParagraphViewModel.SetListStyleCommand}"
                            CommandParameter="arabic"
                            Content="Arabic"
                            IconFill="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                            IconHeight="16"
                            IconSource="{ThemeResource ArabicSvg}"
                            IconWidth="16" />
                    </Ribbon:RibbonToolbarMenuButton>
                </Ribbon:RibbonToolbarGroup>
                <Ribbon:RibbonToolbarGroup Width="Auto" Caption="Edit">
                    <Ribbon:RibbonToolbarButton
                        Command="{x:Bind ViewModel.CopyCommand}"
                        IconFill="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                        IconHeight="24"
                        IconSource="{ThemeResource CopySvg}"
                        IconWidth="24"
                        ItemStyle="Glyph"
                        ToolTipService.ToolTip="Copy" />
                    <Ribbon:RibbonToolbarButton
                        Command="{x:Bind ViewModel.PasteCommand}"
                        FlyoutSameRow="True"
                        IconFill="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                        IconHeight="24"
                        IconSource="{ThemeResource PasteSvg}"
                        IconWidth="24"
                        ItemStyle="Glyph"
                        ToolTipService.ToolTip="Paste" />
                    <Ribbon:RibbonToolbarButton
                        Command="{x:Bind ViewModel.CutCommand}"
                        FlyoutSameRow="True"
                        IconFill="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                        IconHeight="24"
                        IconSource="{ThemeResource CutSvg}"
                        IconWidth="24"
                        ItemStyle="Glyph"
                        ToolTipService.ToolTip="Cut" />
                </Ribbon:RibbonToolbarGroup>
            </Ribbon:RibbonToolbarTab>
            <Ribbon:RibbonToolbarTab Name="insertRibbonTab" Caption="Insert">
                <Ribbon:RibbonToolbarGroup Caption="Insert">
                    <Ribbon:RibbonToolbarButton
                        Command="{x:Bind ViewModel.InsertViewModel.InsertImageCommand}"
                        Content="Image"
                        IconFill="{ThemeResource IconAccentColorBrush}"
                        IconHeight="24"
                        IconSource="{ThemeResource PictureSvg}"
                        IconWidth="24" />
                </Ribbon:RibbonToolbarGroup>
            </Ribbon:RibbonToolbarTab>
            <Ribbon:RibbonToolbarControl.Content>
                <Grid>
                    <local:DemoRichEditBoxExtended
                        x:Name="rtfEditor"
                        Padding="32,0"
                        BorderThickness="0"
                        DocumentColors="{x:Bind ViewModel.DocumentColors, Mode=OneWay}"
                        RTFText="{x:Bind ViewModel.CurrentDocumentText, Mode=TwoWay}"
                        ScrollViewer.BringIntoViewOnFocusChange="False"
                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                        ScrollViewer.VerticalScrollMode="Auto">
                        <Interactivity:Interaction.Behaviors>
                            <local:DemoRichEditorBehavior />
                        </Interactivity:Interaction.Behaviors>
                    </local:DemoRichEditBoxExtended>
                    <Ribbon:ContextToolbarControl Orientation="Vertical" Target="{Binding ElementName=rtfEditor}">
                        <Ribbon:ContextToolbarGroup>
                            <Ribbon:ContextToolbarRadioButton
                                FlyoutSameRow="True"
                                Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"
                                GroupName="Alignment"
                                IconHeight="24"
                                IconSource="{ThemeResource AlignLeftSvg}"
                                IconWidth="24"
                                IsChecked="{Binding CurrentSelectionAlignment, ElementName=rtfEditor, Converter={StaticResource AlignmentToBooleanConverter}, ConverterParameter=Left, Mode=TwoWay}"
                                ItemStyle="Glyph"
                                ToolTipService.ToolTip="Align Left" />
                            <Ribbon:ContextToolbarRadioButton
                                FlyoutSameRow="True"
                                Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"
                                GroupName="Alignment"
                                IconHeight="24"
                                IconSource="{ThemeResource AlignCenterSvg}"
                                IconWidth="24"
                                IsChecked="{Binding CurrentSelectionAlignment, ElementName=rtfEditor, Converter={StaticResource AlignmentToBooleanConverter}, ConverterParameter=Center, Mode=TwoWay}"
                                ItemStyle="Glyph"
                                ToolTipService.ToolTip="Center" />
                            <Ribbon:ContextToolbarRadioButton
                                FlyoutSameRow="True"
                                Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"
                                GroupName="Alignment"
                                IconHeight="24"
                                IconSource="{ThemeResource AlignRightSvg}"
                                IconWidth="24"
                                IsChecked="{Binding CurrentSelectionAlignment, ElementName=rtfEditor, Converter={StaticResource AlignmentToBooleanConverter}, ConverterParameter=Right, Mode=TwoWay}"
                                ItemStyle="Glyph"
                                ToolTipService.ToolTip="Align Right" />
                            <Ribbon:ContextToolbarRadioButton
                                FlyoutFlowBreakWithSeparator="True"
                                FlyoutSameRow="True"
                                GroupName="Alignment"
                                IconFill="{ThemeResource SystemControlForegroundBaseHighBrush}"
                                IconHeight="24"
                                IconSource="{ThemeResource AlignJustifySvg}"
                                IconWidth="24"
                                IsChecked="{Binding CurrentSelectionAlignment, ElementName=rtfEditor, Converter={StaticResource AlignmentToBooleanConverter}, ConverterParameter=Justify, Mode=TwoWay}"
                                ItemStyle="Glyph"
                                ToolTipService.ToolTip="Justify" />
                            <Ribbon:ContextToolbarMenuButton Content="Font Style" Orientation="Vertical">
                                <Ribbon:ContextToolbarToggleButton
                                    CollapsePriority="Low"
                                    IconFill="{ThemeResource SystemControlForegroundBaseHighBrush}"
                                    IconHeight="24"
                                    IconSource="{ThemeResource BoldSvg}"
                                    IconWidth="24"
                                    IsChecked="{x:Bind rtfEditor.CurrentSelectionBoldDecoration, Mode=TwoWay, Converter={StaticResource BoolToNullableConverter}}"
                                    IsThreeStateMode="False"
                                    ItemStyle="Glyph"
                                    ToolTipService.ToolTip="Bold" />
                                <Ribbon:ContextToolbarToggleButton
                                    CollapsePriority="Low"
                                    FlyoutSameRow="True"
                                    IconFill="{ThemeResource SystemControlForegroundBaseHighBrush}"
                                    IconHeight="24"
                                    IconSource="{ThemeResource ItalicSvg}"
                                    IconWidth="24"
                                    IsChecked="{x:Bind rtfEditor.CurrentSelectionItalicDecoration, Mode=TwoWay, Converter={StaticResource BoolToNullableConverter}}"
                                    IsThreeStateMode="False"
                                    ItemStyle="Glyph"
                                    ToolTipService.ToolTip="Italic" />
                                <Ribbon:ContextToolbarToggleButton
                                    CollapsePriority="Low"
                                    FlyoutFlowBreakWithSeparator="True"
                                    IconFill="{ThemeResource SystemControlForegroundBaseHighBrush}"
                                    IconHeight="24"
                                    IconSource="{ThemeResource UnderlineSvg}"
                                    IconWidth="24"
                                    IsChecked="{x:Bind rtfEditor.CurrentSelectionUnderlineDecoration, Mode=TwoWay, Converter={StaticResource BoolToNullableConverter}}"
                                    IsThreeStateMode="False"
                                    ItemStyle="Glyph"
                                    ToolTipService.ToolTip="Underline" />
                            </Ribbon:ContextToolbarMenuButton>
                            <Ribbon:ContextToolbarButton
                                Command="{x:Bind ViewModel.CopyCommand}"
                                Content="Copy"
                                IconFill="{ThemeResource SystemControlForegroundBaseHighBrush}"
                                IconHeight="24"
                                IconSource="{ThemeResource CopySvg}"
                                IconWidth="24"
                                ToolTipService.ToolTip="Copy" />
                            <Ribbon:ContextToolbarButton
                                Command="{x:Bind ViewModel.PasteCommand}"
                                Content="Paste"
                                FlyoutFlowBreak="True"
                                FlyoutSameRow="False"
                                IconFill="{ThemeResource SystemControlForegroundBaseHighBrush}"
                                IconHeight="24"
                                IconSource="{ThemeResource PasteSvg}"
                                IconWidth="24"
                                ToolTipService.ToolTip="Paste" />
                            <Ribbon:ContextToolbarButton
                                Command="{x:Bind ViewModel.CutCommand}"
                                Content="Cut"
                                FlyoutSameRow="True"
                                IconFill="{ThemeResource SystemControlForegroundBaseHighBrush}"
                                IconHeight="24"
                                IconSource="{ThemeResource CutSvg}"
                                IconWidth="24"
                                ToolTipService.ToolTip="Cut" />
                        </Ribbon:ContextToolbarGroup>
                    </Ribbon:ContextToolbarControl>
                </Grid>
            </Ribbon:RibbonToolbarControl.Content>
        </Ribbon:RibbonToolbarControl>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="DeviceFamilyStates">
                <VisualState x:Name="Mobile">
                    <VisualState.StateTriggers>
                        <Xaml:DeviceFamilyTrigger DeviceFamily="Mobile" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="scrollArea.ZoomFactor" Value="0.4" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</Common:DemoModuleView>
